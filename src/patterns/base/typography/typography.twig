<div class="storybook-section">
    <h2 class="storybook-section-header">Font Families</h2>
    <div class="type-list">
        <div class="type-item">
            <h3 class="type-header">--clocktower-serif</h3>
            <span style="font-family: var(--clocktower-serif)">Palatino</span>
        </div>
        <div class="type-item">
            <h3 class="type-header">--clocktower-sans-serif</h3>
            <span style="font-family: var(--clocktower-sans-serif)">FreightSans Pro</span>
        </div>
    </div>
</div>
<div class="storybook-section">

    <h2 class="storybook-section-header">Typography Sizes</h2>
    <div class="type-list">
        {% for typesize in typesizes %}
        <div class="type-item">
            <h3 class="type-header">{{typesize.var}}</h3>
            <span style="font-size: var({{typesize.var}}">Go Big Red!</span>
        </div>
        {% endfor %}
    </div>
</div>
<div class="storybook-section">
    <h2 class="storybook-section-header">Font Weight</h2>
    <div class="type-list">
        <div class="type-item">
            <h3 class="type-header">--light-weight</h3>
            <span style="flex: 0 1 200px; margin-top: 1rem; font-weight: var(--light-weight); font-size: var(--step-1); font-family: var(--clocktower-sans-serif); "><span class="storybook-tag">Sans-Serif</span><br> Light Weight</span>
        </div>
        <div class="type-item">
            <h3 class="type-header">--regular-weight</h3>
            <span style="flex: 0 1 200px; margin-top: 1rem; font-weight: var(--regular-weight); font-size: var(--step-1);"><span class="storybook-tag">Serif</span><br> Regular Weight</span>
            <span style="flex: 0 1 200px; margin-top: 1rem; font-weight: var(--regular-weight); font-size: var(--step-1); font-family: var(--clocktower-sans-serif); ;"><span class="storybook-tag">Sans-Serif</span><br> Regular Weight </span>
            
        </div>
        <div class="type-item">
            <h3 class="type-header">--bold-weight</h3>
            <span style="flex: 0 1 200px; margin-top: 1rem; font-weight: var(--bold-weight); font-size: var(--step-1);"><span class="storybook-tag">Serif</span><br> Bold Weight</span>
            <span style="flex: 0 1 200px; margin-top: 1rem; font-weight: var(--bold-weight); font-size: var(--step-1); font-family: var(--clocktower-sans-serif); "><span class="storybook-tag">Sans-Serif</span><br> Bold Weight</span>
        </div>
    </div>
</div>
